@model GymClient.Models.Personal;
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="author" content="Muhamad Nauval Azhar">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<meta name="description" content="This is a login page template based on Bootstrap 5">
	<title>Bootstrap 5 Login Page</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<body>
	<section class="h-100">
		<div class="container h-100">
			<div class="row justify-content-sm-center h-100">
				<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">

					<div class="card shadow-lg">
						<div class="card-body p-5">
							<h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
							<p style="color:darkred">@ViewBag.Error</p>
							@using (Html.BeginForm("Add", "Admin", FormMethod.Post))
							{
								<div class="mb-3">
									<label class="mb-2 text-muted" for="email">E-Mail Address</label>
									<input asp-for="Email" id="email" type="email" class="form-control" value="" required autofocus>
									<span asp-validation-for="Email" class="text-danger"></span>
								</div>

								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="password">Password</label>

									</div>
									<input id="password" asp-for="Password" type="password" class="form-control" required>
									<span asp-validation-for="Password" class="text-danger"></span>

								</div>

								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="Name">Name</label>

									</div>
									<input id="Name" asp-for="Name" type="text" class="form-control" required>
									<span asp-validation-for="Name" class="text-danger"></span>

								</div>


								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="LastName">LastName</label>

									</div>
									<input id="LastName" asp-for="LastName" type="text" class="form-control" required>
									<span asp-validation-for="LastName" class="text-danger"></span>

								</div>

								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="BirthDay">BirthDay</label>

									</div>
									<input id="BirthDay" asp-for="BirthDay" type="date" class="form-control" required>
									<span asp-validation-for="BirthDay" class="text-danger"></span>

								</div>


								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="Phone">Phone</label>

									</div>
									<input id="Phone" asp-for="Phone" type="text" class="form-control" required>
									<span asp-validation-for="Phone" class="text-danger"></span>

								</div>


								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="Gender">Gender</label>

									</div>
									<select asp-for="Gender">
										<option>Man</option>
										<option>Woman</option>
										<option>Other</option>
									</select>
									<span asp-validation-for="Gender" class="text-danger"></span>

								</div>


								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="IMGPath">IMG</label>

									</div>
									<input asp-for="IMGPath" type="file">
									<span asp-validation-for="IMGPath" class="text-danger"></span>

								</div>


								<button type="submit" class="btn btn-primary ms-auto">
									Login
								</button>




							}
						</div>
						
					</div>

				</div>
			</div>
		</div>
	</section>

</body>
</html>





