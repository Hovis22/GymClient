@model GymClient.Models.Schedule;
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="author" content="Muhamad Nauval Azhar">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<meta name="description" content="This is a login page template based on Bootstrap 5">
	<title>Bootstrap 5 Login Page</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<body>
	<section class="h-100">
		<div class="container h-100">
			<div class="row justify-content-sm-center h-100">
				<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">

					<div class="card shadow-lg">
						<div class="card-body p-5">
							<h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
							<p style="color:darkred">@ViewBag.Error</p>
							<form asp-action="AddNewScheldue" asp-controller="Admin" enctype="multipart/form-data">

								<div class="mb-3">
									<label class="mb-2 text-muted" for="Name">Name</label>
									<input asp-for="Name" id="name" type="email" class="form-control" value="">
									<span asp-validation-for="Name" class="text-danger"></span>
								</div>

								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="CoachId">Coach</label>

									</div>
									<select asp-for="CoachId">
									    @foreach(var coach in ViewBag.Coaches){
											<option value="@coach.Id">@coach.Name</option>
										}
									</select>
								

								</div>


								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="MaxPeople">MaxPeople</label>

									</div>
									<input id="Name" asp-for="MaxPeople" type="text" class="form-control">
									<span asp-validation-for="MaxPeople" class="text-danger"></span>

								</div>


								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="TypeId">TypeId</label>

									</div>
								    <select asp-for="TypeId">
										<option value="1">Solo</option>
										<option value="2">Group</option>
									</select>
								

								</div>

								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="DateOfTrain">DateOfTrain</label>

									</div>
									<input id="BirthDay" asp-for="DateOfTrain" type="date" class="form-control">
									<span asp-validation-for="DateOfTrain" class="text-danger"></span>

								</div>



								<button type="submit" class="btn btn-primary ms-auto">
									Login
								</button>



							</form>

						</div>

					</div>

				</div>
			</div>
		</div>
	</section>

</body>
</html>
