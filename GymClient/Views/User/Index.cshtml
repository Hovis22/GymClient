@{
    DateTime oneDay = new DateTime();
    DateTime oneDay2 = new DateTime();

    bool SameDay(DateTime date)
    {
        Console.WriteLine(oneDay.Date);
        Console.WriteLine(date.Date);
        if (oneDay.Date != date.Date)
        {
            oneDay = date;
            return false;
        }
        return true;

    }


    bool SameDay2(DateTime date)
    {
        Console.WriteLine(oneDay2.Date);
        Console.WriteLine(date.Date);
        if (oneDay2.Date != date.Date)
        {
            oneDay2 = date;
            return false;
        }
        return true;

    }



}

<h1>Hi @ViewBag.Name</h1>

<div class="main-block" style="min-height:100vh; display:flex">



    <div class="combo-box2">
        <h2>Your Group</h2>
        @foreach (Schedule day in ViewBag.Schedule)
        {








            @if (SameDay(day.DateOfTrain) == false)
            {

                <div class="combo-header2">
                    <div class="header-container2">

                        <h2>@day.DateOfTrain.ToString("ddd d MMM",CultureInfo.CreateSpecificCulture("en-US"))</h2>
                        <img src="/images/up.png" alt="">
                    </div>

                </div>

            }

            <div class="combo-item2">

                <h3>@day.Name</h3>
                <p>@day.DateOfTrain.ToString("hh:mm tt",CultureInfo.CreateSpecificCulture("en-US")) /@day.TimeOfTrain min</p>
                <p>@day.personal.Name</p>


            </div>









        }
    </div>


    <div class="combo-box2">
        <h2>Your Solo</h2>
        @foreach (Schedule day in ViewBag.ScheduleSolo)
        {







           
            @if (SameDay2(day.DateOfTrain) == false)
            {

                <div class="combo-header2">
                    <div class="header-container2">

                        <h2>@day.DateOfTrain.ToString("ddd d MMM",CultureInfo.CreateSpecificCulture("en-US"))</h2>
                        <img src="/images/up.png" alt="">
                    </div>

                </div>

            }

            <div class="combo-item2">

                <h3>@day.Name</h3>
                <p>@day.DateOfTrain.ToString("hh:mm tt",CultureInfo.CreateSpecificCulture("en-US")) /@day.TimeOfTrain min</p>
                <p>@day.personal.Name</p>


            </div>









        }
    </div>


</div>